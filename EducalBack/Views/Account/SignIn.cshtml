@model LoginVM
<section id="login">
    <div class="container mt-5">
        <h1 class="text-center">Sign In</h1>
        <div class="text-danger" asp-validation-summary="ModelOnly">

        </div>
        <div class="register-form" style="width: 50%; margin: 100px auto; background-color: chartreuse; padding: 30px; box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px; border-radius:10px;">
            <form method="post" asp-controller="Account" asp-action="SignIn">
               
                <div class="form-group mb-5">
                    <label>EMail Or Username</label>
                    <input autocomplete="off" asp-for="EmailOrUsername" class="form-control">
                    <span class="text-danger" asp-validation-for="EmailOrUsername"></span>
                </div>
                <div class="form-group mb-5">
                    <label>Password</label>
                    <input autocomplete="off" asp-for="Password" class="form-control">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>


                <div class="register-btn d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Sign In</button>
                </div>
                <a  asp-action="SignUp"> Go to Sign Up</a>
            </form>
        </div>
    </div>

</section>



