@model AddUserRoleVM
<div class="row mt-3">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Vertical Form</div>
                <hr>
                <form method="post" asp-action="AddRole">

                    <div class="form-group">
                        <label for="input-1">Users</label>
                        <select asp-for="UserId" asp-items="@ViewBag.usersSelectList" class="form-control"></select>
                    </div>

                    <div class="form-group">
                        <label for="input-1">Roles</label>
                        <select asp-for="RoleId" asp-items="@ViewBag.rolesSelectList" class="form-control"></select>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-light px-5"> Submit</button>
                        <a class="btn btn-light px-5" asp-action="Index"> Cancel</a>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div><!--End Row-->
<!--start overlay-->
